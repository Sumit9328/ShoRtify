    <div class="w-full max-w-xl bg-white/10 p-8 rounded-xl shadow-lg backdrop-blur-md border-2 border-purple-300">

      <!-- Instagram Reels Form -->
      <form id="reelSection" action="/download" method="POST" class="space-y-4">
        <h2 class="text-[35px] font-[600] mb-2 text-center text-[#2a3d7f]">Download Instagram Reel</h2>
        <input type="text" name="url" placeholder="Paste Instagram Reel URL" required
          class="w-full px-4 py-2 rounded-md bg-white/10 text-[#2a3d7f] placeholder-black/70 border border-black/20 focus:outline-none focus:ring-2 focus:ring-black/30" />
        <button type="submit"
          class="w-full py-2 rounded-md border border-pink-500 hover:bg-pink-500 transition text-pink-500 hover:text-white text-[20px] font-[400]">Download
          Reel</button>
      </form>

      <!-- YouTube Shorts Form -->
      <form id="ytSection" action="/download" method="POST" class="space-y-4 hidden">
        <h2 class="text-[35px] font-[600] mb-2 text-center text-[#2a3d7f]">Download YouTube Shorts</h2>
        <input type="text" name="url" placeholder="Paste YT Shorts URL" required
          class="w-full px-4 py-2 rounded-md bg-white/10 text-[#2a3d7f] placeholder-black/70 border border-black/20 focus:outline-none focus:ring-1 focus:ring-black/30" />
        <button type="submit"
          class="w-full py-2 rounded-md border border-[#ff0000] hover:bg-[#ff0000] transition text-[#ff0000] hover:text-white text-[20px] font-[400]">Download
          Shorts</button>
      </form>

      <!-- Display Result -->
      <% if (downloadLink) { %>
        <div class="mt-8 bg-white/10 p-4 rounded-lg shadow-md text-[#2a3d7f]">
          <% if (thumbnail) { %>
            <img src="<%= thumbnail %>" alt="Video Thumbnail"
              class="rounded-md mb-3 w-full max-h-52 object-cover border border-black/20" />
            <% } %>
              <h2 class="text-lg font-semibold mb-2 text-[#2a3d7f]">
                <%= title %>
              </h2>
              <a href="<%= downloadLink %>" download class="text-blue-400 hover:underline">Click to Download</a>
        </div>
        <% } %>

    </div>
  </div>



