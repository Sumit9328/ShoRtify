  <!-- Toggle Script -->
  <script>
    const reelBtn = document.getElementById('reelBtn');
    const ytBtn = document.getElementById('ytBtn');
    const reelSection = document.getElementById('reelSection');
    const ytSection = document.getElementById('ytSection');

    reelBtn.addEventListener('click', () => {
      reelSection.classList.remove('hidden');
      ytSection.classList.add('hidden');
    });

    ytBtn.addEventListener('click', () => {
      ytSection.classList.remove('hidden');
      reelSection.classList.add('hidden');
    });


    function toggleAccordion(index) {
      const content = document.getElementById(`content-${index}`);
      const icon = document.getElementById(`icon-${index}`);

      if (content.classList.contains('hidden')) {
        content.classList.remove('hidden');
        icon.classList.add('rotate-180');
      } else {
        content.classList.add('hidden');
        icon.classList.remove('rotate-180');
      }
    }
  </script>
