    <h1 class="text-3xl sm:text-4xl font-[500] bg-gradient-to-r from-[#db00ff] to-[#22c8fe] text-transparent bg-clip-text">
      InstaSnapper
    </h1>
  </footer>

  <!-- Animation -->
  <style>
    @keyframes gradient {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
    .animate-gradient {
      background-size: 200% 200%;
      animation: gradient 6s ease infinite;
    }
  </style>
</body>
</html>
